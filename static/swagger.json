{
  "openapi": "3.0.0",
  "info": {
    "title": "Job Search API",
    "version": "1.0.0",
    "description": "채용정보 검색 및 지원 API"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "birth_date": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["email", "password", "name"]
      },
      "Job": {
        "type": "object",
        "properties": {
          "posting_id": {
            "type": "integer"
          },
          "company_name": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "job_description": {
            "type": "string"
          },
          "experience_level": {
            "type": "string"
          },
          "education_level": {
            "type": "string"
          },
          "employment_type": {
            "type": "string"
          },
          "salary_info": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "deadline_date": {
            "type": "string",
            "format": "date"
          },
          "tech_stacks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원가입",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "refresh_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그인",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "refresh_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 실패"
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "tags": ["Jobs"],
        "summary": "채용공고 목록 조회",
        "parameters": [
          {
            "in": "query",
            "name": "keyword",
            "schema": {
              "type": "string"
            },
            "description": "검색 키워드"
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "페이지 번호"
          },
          {
            "in": "query",
            "name": "location_id",
            "schema": {
              "type": "integer"
            },
            "description": "지역 필터"
          },
          {
            "in": "query",
            "name": "tech_stacks",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "기술 스택 필터"
          }
        ],
        "responses": {
          "200": {
            "description": "채용공고 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jobs": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Job"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "currentPage": {
                          "type": "integer"
                        },
                        "totalPages": {
                          "type": "integer"
                        },
                        "totalItems": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/applications": {
      "post": {
        "tags": ["Applications"],
        "summary": "채용공고 지원",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "posting_id": {
                    "type": "integer"
                  },
                  "resume_id": {
                    "type": "integer"
                  },
                  "resume_file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["posting_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "지원 성공"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "401": {
            "description": "인증 필요"
          }
        }
      },
      "get": {
        "tags": ["Applications"],
        "summary": "지원 내역 조회",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "status_filter",
            "schema": {
              "type": "string",
              "enum": ["pending", "accepted", "rejected"]
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "지원 내역"
          },
          "401": {
            "description": "인증 필요"
          }
        }
      }
    }
  }
} 